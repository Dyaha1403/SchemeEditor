<local:BaseControl x:Class="SchemeEditor.Controls.Transformer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchemeEditor.Controls"
             mc:Ignorable="d" Width="20" Height="45">
    <Grid>
        <Rectangle Width="20" Height="45" Fill="Transparent"/>
        <Rectangle HorizontalAlignment="Center" VerticalAlignment="Top" Width="1" Height="8" Fill="Black"/>
        <Ellipse Width="20" Height="20" StrokeThickness="1" Stroke="Black" Margin="0, 0, 0, 10"/>
        <Ellipse Width="20" Height="20" StrokeThickness="1" Stroke="Black" Margin="0, 10, 0, 0"/>
        <Rectangle HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="1" Height="8" Fill="Black"/>
    </Grid>
</local:BaseControl>
