<local:BaseControl x:Class="SchemeEditor.Controls.CircuitBreakerImproved"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchemeEditor.Controls"
             mc:Ignorable="d" 
             Width="25" Height="45">
    <Grid>
        <Rectangle Width="25" Height="45" Fill="Transparent"/>
        <Rectangle HorizontalAlignment="Center" VerticalAlignment="Top" Width="1" Height="10" Fill="Black"/>
        <Rectangle Stroke="Black" Fill="{Binding ColorRect}" Width="25" Height="25"/>
        <Rectangle HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="1" Height="10" Fill="Black"/>
    </Grid>
</local:BaseControl>
